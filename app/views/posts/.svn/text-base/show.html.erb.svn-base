<h1>\\ <%= @post.title %></h1>

<div id="post-body">
  <%= add_breaks(h(@post.body)) %>
</div>

<div id="post-data">
  <%= @post.published_at ? "published on #{h_date(@post.published_at)}" : 'created' %>
  in blog 
  <%= link_to(@post.blog.name, blog_url(@post.blog.seo_id), :class => "seo_id") %>
</div>

<div id="bottom-page-link">
  <%= link_to("Back", :back) %>
</div>
<div style="clear:both;"></div>