<% unless logged_in? %>

<% form_tag(session_index_url) do %>
    <%= text_field_tag "openid_identifier" %>
    <%= submit_tag('OpenID', :disable_with => "Wait...") %>
    <p class='tiny'>
      log-in or sign-up using your <%= link_to "OpenID", "http://www.myopenid.com/", :target => "new_" %> account
      </p>
<% end %>

<% else %>
  welcome <%= link_to(current_blog.name, blog_url(current_blog.seo_id), :class => "seo_id") %> |
  <%  unless params[:controller] == 'blogs' &&  params[:action] == 'index' %>
    <%= link_to("homepage", homepage_url) %> |
  <% end %>
  <% unless params[:controller] =~ /dashboard/i %>
    <%= link_to("dashboard", dashboard_url) %> |
  <% end %>
  <%= link_to("log-out", logout_path) %>
<% end %>