<% unless logged_in? %>

<% form_tag(session_index_url, :id => 'login_form') do %>
    <%= hidden_field_tag "openid_identifier", "mekdigital.myopenid.com" %>
    <%= link_to_function "*", '$("#login_form").submit()' %>
<% end %>

<% else %>
  <%  unless params[:controller] == 'blogs' &&  params[:action] == 'index' %>
    <%= link_to("homepage", homepage_url) %> |
  <% end %>
  <% unless params[:controller] =~ /dashboard/i %>
    <%= link_to("dashboard", dashboard_url) %> |
  <% end %>
  <%= link_to("log-out", logout_path) %>
<% end %>