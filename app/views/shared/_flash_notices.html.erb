<!-- Info Box --> 
<% unless flash.length == 0 %>
  <div id="info-box">
    <% flash.select { |k,m| [:error,:notice,:warning].include?(k) && !m.nil? }.each do |key,msg| %>
        <div id="<%= key %>-box">
          <%= link_to_function "x", :class => "close-#{key}", :id => "close" %>
          <%= msg %>
        </div>
      <% flash[key] = nil %>
    <% end %>
  </div>
  <br>
<% end %>
<!-- /Info Box -->

<script language='javascript'>
 $(document).ready(function(){
   $("#info-box").click(function () {
     $("#info-box").fadeOut("slow");
   });
 });
</script>
