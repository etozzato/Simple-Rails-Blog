<h3><%= link_to h(post.title.titleize), blog_post_url(@blog.seo_id, post.seo_id) %></h3>

<div id="post-body">
  <%= add_breaks(auto_link((post.body), :all, :target => "_blank")) %>
</div>

<div id="post-data">
  
  <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pub=mekdigital"></script>
  <a id="blog-post-<%= post.id %>"></a>
  <script type="text/javascript">
  addthis.button('#blog-post-<%= post.id %>', {}, {url: "http://blog.mekdigital.com<%= blog_post_path(@blog.seo_id, post.seo_id) %>", title: "<%= h(post.title.titleize) %>"});
  </script>
  &nbsp;
  published on <%= h_date(post.published_at) %> in
  <%= link_to(post.blog.name, blog_url(post.blog.seo_id), :class => "seo_id") %> - <span class='subtitle'><%= link_to('comments', blog_post_url(@blog.seo_id, post.seo_id)) %></span>
</div>